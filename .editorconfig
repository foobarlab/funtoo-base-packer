# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
indent_size = 2

[*.py]
# pep-0008
indent_style = space
indent_size = 4

[*.ebuild]
indent_style = tab

[Makefile]
indent_style = tab

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
